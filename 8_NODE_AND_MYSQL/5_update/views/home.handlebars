<h1>Books</h1>

<table class="table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Title</th>
      <th scope="col">Page Quantity</th>
      <th scope="col">Action</th>
    </tr>
  </thead>
  <tbody>
    {{#each books}}
    <tr>
      <th scope="row">{{this.id}}</th>
      <td>{{this.title}}</td>
      <td>{{this.pageqty}}</td>
      <td>
        <a href="/book/{{this.id}}" class="btn btn-sm btn-primary"><i class="bi bi-eye"></i></a>
        <a href="/edit/{{this.id}}" class="btn btn-sm btn-success"><i class="bi bi-pencil"></i></a>
      </td>
    </tr>
    {{/each}}
  </tbody>
</table>