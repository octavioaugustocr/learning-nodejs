<table class="table">
    <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Flavor</th>
            <th scope="col">Mark</th>
            <th scope="col">Quantity Stock</th>
            <th scope="col">Action</th>
        </tr>
    </thead>
    <tbody>
        {{#each products}}
        <tr>
            <th scope="row">{{this.id}}</th>
            <td>{{this.name}}</td>
            <td>{{this.price}}</td>
            <td>{{this.flavor}}</td>
            <td>{{this.mark}}</td>
            <td>{{this.quantity_stock}}</td>
            <td>
                <a href="/product/{{this.id}}" class="btn btn-sm btn-primary"><i class="bi bi-eye"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>